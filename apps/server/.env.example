# ============================================================================
# RSTA Server Environment Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env and fill in your API keys
# NEVER commit the .env file to version control!
# ============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
ELEVENLABS_API_KEY=sk_your-elevenlabs-api-key-here

# Realtime Mode
# Options: "direct" (browser connects directly to providers)
#          "proxy" (browser connects through Node WebSocket)
REALTIME_MODE=direct

# Token Configuration
TOKEN_EXPIRY_SECONDS=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_TRANSCRIBE_MAX=30

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
DEBUG=false
LOG_LEVEL=info
LOG_TO_FILE=false

# Cost Rates (per second of audio)
COST_RATE_OPENAI=0.006
COST_RATE_ELEVENLABS=0.0003
